---
import { ROPA } from '../services/Ropa'
import Product from './Product.astro'

const { title } = Astro.props
---

<section class='w-full py-12 px-4 sm:px-6 md:px-8 lg:px-[80px] mt-8'>
  <h2 class='text-xl font-semibold text-center md:text-left'>{title}</h2>
  <div
    class='grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 mt-8 gap-8'
  >
    {
      ROPA.slice(0, 4).map((product) => (
        <Product
          title={product.title}
          img={product.img}
          description={product.description}
          price={product.price}
          colors={product.colors}
          offerPrice={product.offerPrice}
          id={product.id}
          index={ROPA.indexOf(product)}
        />
      ))
    }
  </div>
</section>
